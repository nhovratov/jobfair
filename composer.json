{
	"name": "hov/jobfair",
	"description": "Simple job market based on Extbase and Fluid. Basically works like dmmjobcontrol. There are list and detail views available. In addition, it is possible to set up an online application system. Furthermore, FE-Users can be enabled to add and edit jobs in the frontend, so to BE-Administration is required. Feeds (Rss091, Rss2, Atom) are also available",
	"license": "GPL-2.0-or-later",
	"type": "typo3-cms-extension",
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin",
		"sort-packages": true,
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"authors": [
		{
			"name": "Daniel Schill",
			"email": "typo3dev@outlook.com"
		},
		{
			"name": "Nikita Hovratov",
			"email": "entwicklung@nikita-hovratov.de"
		}
	],
	"require": {
		"typo3/cms-core": "^11.5.3 || ^12.4.28",
		"typo3/cms-backend": "^11.5.3 || ^12.4.28",
		"typo3/cms-extbase": "^11.5.3 || ^12.4.28",
		"typo3/cms-fluid": "^11.5.3 || ^12.4.28",
		"typo3/cms-frontend": "^11.5.3 || ^12.4.28"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "jobfair",
			"web-dir": ".Build/public"
		}
	},
	"autoload": {
		"psr-4": {
			"Dan\\Jobfair\\": "Classes/"
		}
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3",
		"ssch/typo3-rector": "^1.3",
		"typo3/cms-extensionmanager": "^11.5.3 || ^12.4.28",
		"typo3/cms-felogin": "^11.5.3 || ^12.4.28",
		"typo3/cms-filelist": "^11.5.3 || ^12.4.28",
		"typo3/cms-fluid-styled-content": "^11.5.3 || ^12.4.28",
		"typo3/cms-install": "^11.5.3 || ^12.4.28",
		"typo3/cms-lowlevel": "^11.5.3 || ^12.4.28",
		"typo3/cms-tstemplate": "^11.5.3 || ^12.4.28"
	},
	"scripts": {
		"pre-autoload-dump": [
			"[ -d \"config\" ] || cp -a ./Build/config.example ./config"
		]
	}
}
